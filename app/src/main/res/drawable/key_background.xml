<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <inset android:insetLeft="2dp" android:insetTop="4dp" android:insetRight="2dp" android:insetBottom="4dp">
            <shape android:shape="rectangle">
                <solid android:color="#B0BEC5"/>
                <corners android:radius="8dp"/>
            </shape>
        </inset>
    </item>

    <!-- Default state -->
    <item>
        <inset android:insetLeft="2dp" android:insetTop="4dp" android:insetRight="2dp" android:insetBottom="4dp">
            <shape android:shape="rectangle">
                <solid android:color="#FFFFFF"/>
                <corners android:radius="8dp"/>
                <padding android:bottom="2dp" />
                <!-- Subtle shadow effect using a stroke and solid combo if possible, 
                     but for simplicity in InputMethodService, we use a clean border -->
                <stroke android:width="1dp" android:color="#CFD8DC"/>
            </shape>
        </inset>
    </item>
</selector>
