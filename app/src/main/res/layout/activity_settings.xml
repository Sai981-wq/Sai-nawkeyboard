<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Setup"
            android:textColor="#2196F3"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btn_enable_keyboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Enable Keyboard"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btn_select_keyboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. Select Keyboard"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Preferences"
            android:textColor="#2196F3"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btn_languages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Languages  >"
            android:gravity="center_vertical|start"
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:backgroundTint="#E0E0E0"/>

        <Button
            android:id="@+id/btn_accessibility"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Accessibility Options  >"
            android:gravity="center_vertical|start"
            android:padding="12dp"
            android:layout_marginBottom="20dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:backgroundTint="#E0E0E0"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_vibrate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Vibration"
            android:textSize="16sp"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_sound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Sound on Keypress"
            android:textSize="16sp"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_theme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Dark Theme"
            android:textSize="16sp"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_number_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Show Number Row"
            android:textSize="16sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btn_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About"
            style="@style/Widget.AppCompat.Button.Borderless"/>

    </LinearLayout>
</ScrollView>

