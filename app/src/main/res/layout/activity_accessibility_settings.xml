<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accessibility Options"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#2196F3"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Touch Interaction:"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#666666"
        android:layout_marginBottom="10dp"/>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_typing_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="Lift-to-Type Mode"
        android:textSize="16sp"
        android:background="?attr/selectableItemBackground"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ON: Lift finger to type.\nOFF: Double-tap to type."
        android:textSize="12sp"
        android:textColor="#888888"
        android:paddingStart="15dp"
        android:layout_marginBottom="20dp"/>

    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE" android:layout_marginBottom="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Screen Reader Feedback:"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#666666"
        android:layout_marginBottom="10dp"/>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_smart_echo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="Smart Echo (Text Verification)"
        android:textSize="16sp"
        android:background="?attr/selectableItemBackground"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="• Verifies text entered into the input box.\n• Reads whole word after Space."
        android:textSize="12sp"
        android:textColor="#888888"
        android:paddingStart="15dp"
        android:layout_marginBottom="20dp"/>

    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE"/>

</LinearLayout>

