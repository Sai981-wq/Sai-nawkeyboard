<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Input Languages"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#2196F3"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="English (US) is enabled by default for system compatibility.\n\nToggle additional languages:"
        android:textSize="16sp"
        android:layout_marginBottom="20dp"
        android:textColor="#666666"
        android:lineSpacingExtra="4dp"/>

    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE"/>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_mm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Myanmar (Unicode)"
        android:textSize="18sp"
        android:padding="15dp"/>

    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE"/>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_shan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shan (Unicode)"
        android:textSize="18sp"
        android:padding="15dp"/>

    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE"/>

</LinearLayout>

